************************
creation
************************

eksctl create cluster \
  --name my-eks-cluster \
  --version 1.27 \
  --region ap-south-1 \
  --nodegroup-name standard-workers \
  --node-type t2.micro \
  --nodes 2



  AWS eks update-kubeconfig --region region-code --name my-cluster

  
************************
Delete
************************

eksctl delete cluster --name demo-cluster --region us-east-1